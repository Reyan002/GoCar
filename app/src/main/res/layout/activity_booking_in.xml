<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Acivities.BookingIn">

    <com.google.android.material.tabs.TabLayout
        android:visibility="gone"
        android:id="@+id/simpleTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="#ffffff"
        app:tabTextColor="#FFD5B7B7" />
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/simpleFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/loginLinearLayoutMyBooking"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="200dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="To view bookings, Please log in with your GoCar account or Signup now."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/loginbtnbooking"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:text="Login or Signup"
            android:background="@color/colorPrimary"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>