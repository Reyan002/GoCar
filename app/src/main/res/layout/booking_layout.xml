<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/booking_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@mipmap/car_image_display_foreground" />

    <LinearLayout

         android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/car_name_booking"
            android:text="Car Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/car_loc"
            android:text="Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/requested_by"
           android:text="View Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
   <LinearLayout

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/range"
           android:text="From - to "
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"/>
       <TextView
           android:id="@+id/rperh"
           android:text="Rate per hour"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"/>
   </LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/decline"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorPrimary"
        android:text="Decline"
        android:drawableLeft="@drawable/ic_clear_black_24dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <Button
        android:visibility="gone"
        android:id="@+id/accept"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorPrimary"
        android:text="Accept"
        android:drawableLeft="@drawable/ic_check_black_24dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
    </LinearLayout>
</LinearLayout>